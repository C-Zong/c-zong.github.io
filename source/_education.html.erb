<% data.locales.en[index].universities.each do |edu| %>
  <div class="row justify-content-center py-4 border-bottom">
    <div class="col-2 d-flex justify-content-center align-items-center">
      <img src="<%= edu.image.path %>" alt="<%= edu.image.alt %>" class="img-fluid">
    </div>
    <div class="col-10">
      <strong class="fs-5 d-block lh-lg"><%= edu.name %></strong>
      <em class="fs-6 mb-3"><%= edu.degree %><br><%= edu.dates %></em>
      <ul class="mt-3">
        <% edu.honors.each do |honor| %>
          <li><%= honor %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>